{
  "name": "城プロランチャー",
  "version": "1.8.9",
  "manifest_version": 3,
  "description": "御城プロジェクトをぴったりサイズの別窓で起動します",
  "background":{
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16" : "images/ShiroproLauncher_16.png",
    "19" : "images/ShiroproLauncher_19.png",
    "32" : "images/ShiroproLauncher_32.png",
    "48" : "images/ShiroproLauncher_48.png"
  },
  "action": {
        "default_icon": "images/ShiroproLauncher_19.png"
   },
   "permissions": [
    "tabs",
    "webNavigation",
    "downloads",
    "notifications",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "commands": {
    "ScreenShot": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "スクリーンショットを撮る"
    },
    "OpenTimer": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "MacCtrl+Shift+1"
      },
      "description": "タイマーウインドウを表示"
    },
    "ToggleFullScreen": {
      "description": "フルスクリーン切り替え"
    },
    "ToggleSoundMute": {
      "description": "音声をミュート"
    }
  },
  "options_page": "option.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
